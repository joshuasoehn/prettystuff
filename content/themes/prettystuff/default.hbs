<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />

    <link rel="shortcut icon" href="{{asset "favicon.ico"}}">

    {{! Facebook OpenGraph }}
    <meta property="og:site_name" content="{{@blog.title}}">
    <meta property="og:type" content="article">
    <meta property="article:published_time" content="{{date format='YYYY-MM-DD, hh:mm:ss'}}">
    <meta property="og:url" content="{{url absolute='true'}}" />
    <meta property="og:title" content="{{{title}}}" />
    <meta property="og:description" content="{{excerpt}}" />
    <meta property="og:image" content="{{@blog.url}}{{asset 'images/facebook-opengraph.png'}}" /> 

    {{! Styles'n'Scripts }}
    <link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}" />

    {{! Typekit }}
    <script type="text/javascript" src="//use.typekit.net/guh3lyd.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}}">

    {{> sidebar}}

    {{! Everything else gets inserted here }}
    <div class="site">

        <div class="mobile-menu">
            <button class="menu-toggle"><span></span></button>
        </div>

        {{{body}}}
    </div>

    {{> footer}}

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    {{! The main JavaScript file }}
    <script type="text/javascript" src="{{asset "js/dist/scripts.min.js"}}"></script>


</body>
</html>
